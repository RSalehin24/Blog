<%= form_with url: "/search", method: :get do |form| %>
  <div class="search-div">
    <div class="search-type">
      <%= form.select(:search_type, options_for_select([["Post", "Post"], ["User", "User"]]), {prompt: "Search Type"}, {class: "txt-general bg-transparent input-search-type", required: true})%>
    </div>
    <div class="search-category">
      <%= form.select(:category_id, options_for_select(@categories_array), {prompt: "Category"}, {class: "txt-general bg-transparent input-search-category"})%>
    </div>
    <div class="search-string">
      <%= form.text_field :search_string, class: "form-control txt-general bg-transparent input-search-string", placeholder: "Post title / Username" %>
    </div>
    <%= form.submit "Search", id: "search-button", class: "btn bttn-search input-search-button" %>
  </div>
<% end %>
