<% if(@posts.empty?) %>
  <%= turbo_stream.replace "alerts42" do %>
    <%= render "layouts/alerts", notice: "The Post has been disapproved" %>
  <% end %>
  <%= turbo_stream.replace "#{dom_id(@post)}_item" do %>
    <% render "handle_posts/approve_posts/approve_post/approve_destroy" %>
  <% end %>
<% else %>
  <%= turbo_stream.replace "alerts42" do %>
    <%= render "layouts/alerts", notice: "The Post has been disapproved" %>
  <% end %>
  <%= turbo_stream.remove "#{dom_id(@post)}_item" %>
<% end %>