<div id="<%= "#{dom_id(post)}_item" %>">
  <%= turbo_frame_tag dom_id(post) do %>
    <br>
    <div class="card">
      <div class="card-body">
        <%= render "posts/post/post_body", post: post %>
        <%= render "handle_posts/pending_posts/pending_post/pending_footer", post: post %>
      </div>
    </div>
  <% end %>
</div>
<br>