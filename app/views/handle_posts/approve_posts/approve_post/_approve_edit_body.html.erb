<%= render "posts/post/post_header", post: post %>
<div id="<%= "#{dom_id(post)}_body" %>" style= "align-items: center; justify-content: center;">
  <hr class="my-4 post-line-hr">
  
  <div id="<%= "#{dom_id(post)}_category_edit_form bf-transparent" %>" style="margin-left: 10px">
    <p></p>
    <h5 class="txt-general", style="margin-left: 5px">Update Category</h5>
    <%= render "handle_posts/approve_posts/approve_post/approve_edit_form", post: post %>
    <p></p>
  </div>
 
  <hr class="my-4 post-line-hr">
  <%= render "posts/post/post_image", post: post %>
  <div id="<%= "#{dom_id(post)}_description" %>" style="margin-left: 10px">
    <p class="txt-general">
      <%= post.body %>
    </p>
  </div>
</div>
    