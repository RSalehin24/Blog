<% if(@posts.empty?) %>
  <%= turbo_stream.replace "alerts42" do %>
    <%= render "layouts/alerts", notice: "The Post has been submitted to the admin for review again!" %>
  <% end %>
  <%= turbo_stream.replace "#{dom_id(@post)}_item" do %>
    <% render "handle_posts/disapprove_posts/disapprove_post/disapprove_destroy" %>
  <% end %>
<% else %>
  <%= turbo_stream.replace "alerts42" do %>
    <%= render "layouts/alerts", notice: "The Post has been submitted to the admin for review again!" %>
  <% end %>
  <%= turbo_stream.remove "#{dom_id(@post)}_item" %>
<% end %>