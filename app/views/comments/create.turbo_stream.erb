<% if @comments <= 0 %>
  <%= turbo_stream.remove "no-comment-posted" %>
<% end %>

<%= turbo_stream.prepend "#{dom_id(@post)}_comments" do %>
  <%= render "comment", comment: @comment %>
<% end %>

<%= turbo_stream.replace "#{dom_id(@post)}_comment_form" do %>
  <% render "form", post: @post %>
<% end %>
