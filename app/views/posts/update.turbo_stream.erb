<% if current_user.is_admin? && @post.author != "" && @post.author != current_user.username %>
  <%= turbo_frame_tag dom_id(@post) do %>
    <%= render "handle_posts/pending_posts/pending_post/pending_post_div", post: @post %>
  <% end %>
<% else %>
  <%= turbo_stream.replace "#{dom_id(@post)}_item" do %>
    <%= render "handle_posts/pending_posts/pending_post/pending_post", post: @post %>
  <% end %>
<% end %>
