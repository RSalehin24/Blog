<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p></p>
  <div>
    <%= form.text_field :title, class: "form-control", placeholder: "Title", :required => true %>
  </div>

  <p></p>
  <div>
    <%= form.text_area :body, class: "form-control", placeholder: "Body", :required => true %>
  </div>

  <p></p>
  <div>
    <%= form.text_field :author, class: "form-control", placeholder: "Author", :required => true %>
  </div>

  <p></p>
  <div>
    <%= form.text_field :user_id, class: "form-control", placeholder: "User ID", value: current_user.id, type: :hidden, :required => true %>
  </div>

  <p></p>
  <div>
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
