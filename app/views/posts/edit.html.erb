<%= turbo_frame_tag dom_id(@post) do %>
<br>
<div class="card card-border bg-transparent" style="width: 35rem;">
  <div class="card-body bg-transparent">
    <h6 class="card-title txt-general"><h2 class="txt-title">Edit post</h2></h6><p></p>
     <% if @post.images.attached? %>
        <div id="postImage">
          <% @post.images.each do |image| %>
            <%= image_tag image, style: "max-width: 100%; max-height: 100%;  relative; height: relative; padding: 10px;" %>
            <!-- <%= link_to 'Remove', post_delete_image_path(post_id: @post.id, id: image.signed_id), data: { turbo_method: :delete } %> -->
          <% end %>
        </div><br>
      <% end %>
    <%= render "form", post: @post %>
  </div>
</div>
<% end %>