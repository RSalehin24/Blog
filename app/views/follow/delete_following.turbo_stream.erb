<% if @is_empty %>
  <%= turbo_stream.replace "alerts42" do %>
    <%= render "layouts/alerts", notice: "You are not following the person anymore"  %>
  <% end %>
  <%= turbo_stream.replace "#{dom_id(@follower)}_follower" do %>
    <% render "follow/partials/follower_none", follower: @follower %>
  <% end %>
<% else %>
  <%= turbo_stream.replace "alerts42" do %>
    <%= render "layouts/alerts", notice: "You are not following the person anymore" %>
  <% end %>
  <%= turbo_stream.remove "#{dom_id(@follower)}_follower" %>
<% end %>