<% if @is_empty %>
  <%= turbo_stream.replace "alerts42" do %>
    <%= render "layouts/alerts", notice: "The follower is removed" %>
  <% end %>
  <%= turbo_stream.replace "#{dom_id(@followee)}_followee" do %>
    <% render "follow/partials/followee_none", followee: @followee %>
  <% end %>
<% else %>
  <%= turbo_stream.replace "alerts42" do %>
    <%= render "layouts/alerts", notice: "The follower is removed" %>
  <% end %>
  <%= turbo_stream.remove "#{dom_id(@followee)}_followee" %>
<% end %>