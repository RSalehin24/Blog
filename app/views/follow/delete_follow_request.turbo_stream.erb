<% if @is_empty %>
  <%= turbo_stream.replace "alerts42" do %>
    <%= render "layouts/alerts", notice: "Your request to follow is deleted" %>
  <% end %>
  <%= turbo_stream.replace "#{dom_id(@requester)}_requester" do %>
    <% render "follow/partials/requester_none", requester: @requester %>
  <% end %>
<% else %>
  <%= turbo_stream.replace "alerts42" do %>
    <%= render "layouts/alerts", notice: "Your request to follow is deleted" %>
  <% end %>
  <%= turbo_stream.remove "#{dom_id(@requester)}_requester" %>
<% end %>