<%= turbo_stream.remove "#{dom_id(@notification_to_mark_as_read)}_unread_notification" %>

<%= turbo_stream.prepend "read-notifications" do %>
  <%= render "notification", locals: { notification: @notification_to_mark_as_read, read: @read } %>
<% end %>

<% if @unread.count <= 0 %>
  <%= turbo_stream.replace "notifications-icon" do %>
    <%= render "notifications_icon" %>
  <% end %>
<% end %>

<%= turbo_stream.replace "unread-count" do %>
  <%= render "unread_count", unread: @unread %>
<% end %>