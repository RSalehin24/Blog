<h2>Change your password</h2>
<p></p>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "New Password (minimum " + @minimum_password_length.to_s + " characters)", class: "form-control" %>
  </div>
  <p></p>
  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password", class: "form-control" %>
  </div>
  <p></p>
  <div class="actions">
    <%= f.submit "Change password", class: "bttn-other-main" %>
  </div>
  
<% end %>
<br><br>
<%= render "devise/shared/links" %>
