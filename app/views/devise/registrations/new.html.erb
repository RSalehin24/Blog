<div class="card">
  <div class="card-body">
    <h2 class="card-title txt-title">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <p></p>
      <div class="field">
        <span class="input-group-text padding">
          <span class="fa fa-user padding-input-icon"></span> 
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "First Name", class: "form-control input-radius", :required => true %>
        </span>	
      </div>  <p></p>
      <div class="field">
        <span class="input-group-text padding">
            <span class="fa fa-user padding-input-icon"></span> 
            <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "Last Name", class: "form-control input-radius", :required => true %>
        </span>	
      </div>  <p></p>
      <div class="field">
        <span class="input-group-text padding">
          <span class="padding-input-username">@</span> 
            <%= f.text_field :username, autofocus: true, autocomplete: "username", placeholder: "Username (has to be unique)", class: "form-control input-radius", :required => true %>
        </span>	
      </div>  <p></p>
      <div class="field">
       <span class="input-group-text padding">
            <i class="fa fa-paper-plane padding-input-icon"></i>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control input-radius", :required => true %>
        </span>	
      </div>  <p></p>
      <div class="field">
        <span class="input-group-text padding">
          <i class="fa fa-lock padding-input-icon"></i>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password (minimum " + @minimum_password_length.to_s + " characters)", class: "form-control input-radius", :required => true %>
        </span>	
      </div>
      <p></p>
      <div class="field">
        <span class="input-group-text padding">
          <i class="bi bi-eye-fill padding-confirm-pass"></i>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password", class: "form-control input-radius padding-input", :required => true %>
				</span>
      </div>
      <p></p>
      <div class="actions">
        <%= f.submit "Sign up", class: "bttn-other-main" %>
      </div>
    <% end %>
  </div>
</div>

<br> <br>
<%= render "devise/shared/links" %>
