<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <p></p>
  <div class="field">
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "First Name", class: "form-control", :required => true %>
  </div>  <p></p>
  <div class="field">
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "Last Name", class: "form-control", :required => true %>
  </div>  <p></p>
  <div class="field">
    <%= f.text_field :username, autofocus: true, autocomplete: "username", placeholder: "Username (has to be unique)", class: "form-control", :required => true %>
  </div>  <p></p>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control", :required => true %>
  </div>  <p></p>
  <div class="field">
    <%= f.date_field :date_of_birth, autofocus: true, autocomplete: "date_of_birth", placeholder: "Date of birth", class: "form-control", :required => true %>
  </div>
  <p></p>
  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password (minimum " + @minimum_password_length.to_s + " characters)", class: "form-control", :required => true %>
  </div>
  <p></p>
  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password", class: "form-control", :required => true %>
  </div>
  <p></p>
  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-primary" %>
  </div>
<% end %>
<br> <br>
<%= render "devise/shared/links" %>
