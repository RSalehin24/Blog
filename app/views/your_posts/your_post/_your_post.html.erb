<div id="<%= "#{dom_id(post)}_item" %>">
  <%= turbo_frame_tag dom_id(post) do %>
    <br>
    <div class="card bg-transparent card-border">
      <div class="card-body bg-transparent">
        <%= render "your_posts/your_post/your_post_body", post: post %>
        <div class="bg-transparent" data-controller="comment-visibility">
          <%= render "your_posts/your_post/your_post_footer", post: post %>
          <%= render "posts/post/post_comment", post: post %>
        </div>
      </div>
    </div>
  <% end %>
</div>
<br>