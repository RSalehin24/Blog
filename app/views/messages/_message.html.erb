<div class="message-box-container cont-<%=message.user.id%>">
  <div class="message-box msg-<%= message.user.id %>">
      <div class="d-flex align-items-center">
        <%= image_tag(message.user.image, class: 'chat_pfp') %>
        <div style="margin-bottom: 10px;">
          <h6 class="name"><%= message.user.first_name + " " + message.user.last_name %></h6>
          <p class="time" style="font-size: 12px;"><%= time_ago_in_words(message.created_at) %></p>
        </div>
      </div>
      <%= message.body %>
      <div>
        <% if message.attachments.attached? %>
          <% message.attachments.each_with_index do |attachment, index| %>
            <% if attachment.image? %>
              <%= image_tag attachment, style: "max-width: 200px; max-height: 200px; border-radius: 5px" %>
            <% elsif attachment.video? %>
              <%= video_tag attachment, style: "max-width: 200px; max-height: 200px; border-radius: 5px", controls: '' %>
            <% elsif attachment.audio? %>
              <%= audio_tag audio, controls: '' %>
            <% else %>
              <%= link_to attachment.filename, attachment, style: "text-decoration: none; color: #fff" %>
            <% end %>
          <% end %>
        <% end %>
      </div>
  </div>
</div>
