<h1>Requests for Admin Role</h1> <p></p>
<% if @users.empty? %>
  <h4>Do not have any more requests right now! </h4> <p></p>
<% else %>
   <table class="table table-striped table-bordered table-hover">
        <thead class="table-primary">
          <tr>
            <th>Email</th>
            <th>Approve</th>
            <th>Delete</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.email %></td>
              <td><%= link_to "Approve", change_role_change_is_admin_path(:_id => user.id), data: { turbo_method: :post }, class: "btn btn-outline-primary btn-sm" %></td>
              <td><%= link_to "Disapprove", change_role_disapprove_request_path(:_id => user.id), data: { turbo_method: :post }, class: "btn btn-outline-danger btn-sm" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
<% end %>
